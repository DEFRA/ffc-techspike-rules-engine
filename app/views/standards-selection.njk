
{% extends './layouts/layout.njk' %}

{% block pageTitle %}
  {{siteTitle}}
{% endblock %}
{% block content %}
  <div class="govuk-width-container">
    <div class="govuk-main-wrapper--auto-spacing">
      <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
          <form method="post" action="form">
            
            {{  govukCheckboxes({
                name: "selectedSchemes",
                fieldset: {
                  legend: {
                    text: "Which standards do you want to apply for?",
                    isPageHeading: true,
                    classes: "govuk-fieldset__legend--l"
                  }
                },
                hint: {
                  text: "The standard(s) you are eligible for are shown below. Choose all that apply."
                },
                items: availableSchemes
              }) }}
            
            {{ govukButton({
              text: "Save and continue"
            }) }}
          </form>
        </div>
      </div>
    </div>
  </div>
{% endblock %}
