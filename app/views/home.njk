
{% extends './layouts/layout.njk' %}
{% from "govuk/components/table/macro.njk" import govukTable %}

{% block pageTitle %}
  {{siteTitle}}
{% endblock %}
{% block content %}
  <div class="govuk-width-container">
    <div class="govuk-main-wrapper--auto-spacing">
      <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
          <h1 class="govuk-heading-m">Sustainable Farming Incentive</h1>
          <h2 class="govuk-heading-xl">Apply for SFI</h2>
          
          <form action="/jbpm-communicator" method="post">
            <label class="govuk-label govuk-input__label">Please enter your SBI number
              <input class="govuk-input" type="text" name="sbi" />
            </label>
            <button class="govuk-button" type="submit" >Proceed</button>
          </form>

        </div>
      </div>
    </div>
  </div>
{% endblock %}
