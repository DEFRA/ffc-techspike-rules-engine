{# {% extends '.layout.njk' %} #}
{% block pageTitle %}
  {{siteTitle}}
{% endblock %}
{% block content %}
  <div class="govuk-width-container">
    <div class="govuk-main-wrapper--auto-spacing">
      <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
          <h1 class="govuk-heading-xl">Dynamic form [{{ formId }}]</h1>
        </div>
        <div class="govuk-grid-column-two-thirds">

      <form method="POST" action="{{ '/' }}" autocomplete="off" novalidate>
            {% for field in fields %}
              {# {{ govukInput({
                id: field.id,
                name: field.name,
                label: {
                  text: field.label
                }
              }) }} #}
            {% endfor %}
            <input type="submit" value="Save"/>
          </form>
        </div>
      </div>
    </div>
  </div>
{% endblock %}
